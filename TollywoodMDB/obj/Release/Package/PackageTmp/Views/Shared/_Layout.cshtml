<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TollywoodMDB</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr") 
        @Scripts.Render("~/Scripts/jquery-3.1.1.js")
        <script src="~/Scripts/MenuBarScript.js"></script>
    <link rel="stylesheet" href="~/Content/themes/base/autocomplete.css" />
    <link rel="stylesheet" href="~/Content/themes/base/jquery-Ui-Smoothness.css" />
</head>
<body style="background-color:#edeaea">
    <div style="width:100%;height:100%;">
        @{Html.RenderPartial("_Menubar");}

        <br />
        <div style="float:left;height:auto;">
            <!--render movie category View-->
            @{Html.RenderAction("MovieCategory", "Search"); }
        </div>

        <div>            
            <div style="margin-left:210px;float:left;width:65%;">
                <div>
                    @RenderBody()
                </div>
            </div>
            <!--Profile View-->
            <div style="float:right;height:0px;width:0px;">
                @{Html.RenderPartial("_ProfileIconView");}
            </div>

        </div>
    </div>
    <div style="clear:left;"></div><br/><br/>
 
     @{Html.RenderAction("ListOfActors", "Actors");}

    <hr />
    <footer>
        <p style="margin-left:500px;">&copy; @DateTime.Now.Year - All rights Reserved</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqureyui")
    @Styles.Render("~/Content/cssjqueryUi")
    @RenderSection("scripts", required: false)
    @*<script src="~/Scripts/MenuBarScript.js"></script>*@
    
</body>
</html>         
